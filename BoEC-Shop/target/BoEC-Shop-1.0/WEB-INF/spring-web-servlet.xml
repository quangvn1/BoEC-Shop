<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans     
        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
        http://www.springframework.org/schema/mvc 
        http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context-3.2.xsd">

    <context:component-scan base-package="com.quangvn.controller" />

    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/views/" />
        <property name="suffix" value=".jsp"/>
    </bean>

    <mvc:resources location="/WEB-INF/images/" mapping="/images/**" />
    <mvc:resources location="/WEB-INF/styles/css/" mapping="/css/**" />
    <mvc:resources location="/WEB-INF/styles/js/" mapping="/js/**" />
    <mvc:resources location="/WEB-INF/views/layouts/" mapping="/layouts/**" />
    <mvc:resources location="/WEB-INF/images/" mapping="/images/**" />
    <mvc:resources location="/WEB-INF/views/" mapping="/**" />
    <mvc:annotation-driven />
	
</beans>